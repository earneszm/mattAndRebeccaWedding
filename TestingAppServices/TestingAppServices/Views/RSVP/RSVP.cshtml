@model TestingAppServices.Models.Guests

@{
    ViewBag.Title = "RSVP";
}

<h2>RSVP</h2>

<div class="well">
    <div class="row">
        <button type="button" class="btn btn-primary col-sm-offset-9" style="font-weight:bold;" onclick="location.href='@Url.Action("AddGuest", "AddGuest")'"><b>Add Guest</b></button>
    </div>
    <div class="row">
        <div class="col-xs-1">
            <h4>@Html.DisplayNameFor(model => model.guestList[0].GuestID)</h4>
        </div>
        <div class="col-xs-2">
            <h4>@Html.DisplayNameFor(model => model.guestList[0].Name)</h4>
        </div>
        <div class="col-xs-2">
            <h4>@Html.DisplayNameFor(model => model.guestList[0].Email)</h4>
        </div>
        <div class="col-xs-2">
            <h4>@Html.DisplayNameFor(model => model.guestList[0].IsAttending)</h4>
        </div>
        <div class="col-xs-1">
            <h4>@Html.DisplayNameFor(model => model.guestList[0].HasRSVPed)</h4>
        </div>
        <div class="col-xs-3">
            <h4>@Html.DisplayNameFor(model => model.guestList[0].CommentForEmailSent)</h4>
        </div>
        <div class="col-xs-1">
            <h4>@Html.DisplayNameFor(model => model.guestList[0].RsvpId)</h4>
        </div>
    </div>
    @foreach (var item in Model.guestList)
    {
    @Html.Partial("_guest", item);
    }
</div>