@model MattAndRebeccaWedding.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Admin Login</h2>

@if(!String.IsNullOrEmpty(ViewBag.FailureMessage))
    {
        <label class="label label-danger" style="font-size:1.4em">@ViewBag.FailureMessage</label>
        <br />
        <br />
    }


@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
                    @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { @class = "form-control", @placeholder = "User Name" })
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
                    @Html.PasswordFor(model => model.UserPassword, htmlAttributes: new { @class = "form-control", @placeholder = "Password" })
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-xs-8 col-xs-offset-2 col-sm-offset-4">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>            
        </div>
    </div>
}
