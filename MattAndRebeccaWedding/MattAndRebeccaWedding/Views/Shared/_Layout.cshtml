<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Over+the+Rainbow' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700' rel='stylesheet' type='text/css'>

</head>



<body style="min-width:320px;">     
    <main>
        
        <div class="container body-content" >
            @Html.Partial("_adminLoginTracker")
            <div class="well mainWell">
                @Html.Partial("_header")                
                @RenderBody()
            </div>
        </div>

    </main>

    <footer>        
        @*<p>@Html.Partial("_footer")</p>*@
        
        <p><a style="font-family: 'Merriweather Sans',sans-serif" href='@Url.Action("Login", "Login")'>&copy;</a> @DateTime.Now.Year</p>
    </footer>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
